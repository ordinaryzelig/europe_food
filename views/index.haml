#map.step{'data-scale' => @map_scale, 'data-y' => -180, 'data-x' => 50}
  %img{src: 'images/map.png'}

- locations.each do |location|
  .step.location{location.step_atts}
    .pin
      %img{src: 'images/pin.png'}
    %h1.name= location.name

  - location.foods.each do |food|
    .step.food{food.step_atts}
      %img{src: 'images/lazy.png', 'data-src' => food.src}
      .name= food.name

  -# End of location.
  .step.end_location{location.step_atts.merge('id' => "end_#{location.name}")}

#the_end.step{'data-scale' => @map_scale, 'data-z' => 30_000}
  %h1
    The
    %br
    End
  %a#startOver{href: '#map'}
    %img{src: 'images/spoon.jpg'}
  #startOverHint Click the globe to start over.
